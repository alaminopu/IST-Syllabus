                android:textColor="#000000"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bba_subject_code_and_name214"
                android:id="@+id/bba_subject_code_and_name214"
                android:layout_below="@+id/bba_subject_code_and_name213"
                android:textColor="#000000"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bba_subject_code_and_name215"
                android:id="@+id/bba_subject_code_and_name215"
                android:layout_below="@+id/bba_subject_code_and_name214"
