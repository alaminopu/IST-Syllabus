<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:scrollbars="vertical"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:background="#ffffff">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent" android:background="#ffffffff"
                  android:weightSum="1"
                  android:layout_gravity="center_vertical"
                  android:gravity="center"
            >

        <ImageView
                android:layout_width="190dp"
                android:layout_height="160dp"
                android:id="@+id/developerPortrait"
                android:src="@drawable/developer" android:contentDescription="@string/developer"
                android:layout_weight="0.1"
                android:layout_marginRight="30dp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/developer"
                android:id="@+id/developer" android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                android:layout_below="@id/developerPortrait"
                />

        <ImageView
                android:layout_width="190dp"
                android:layout_height="160dp"
                android:id="@+id/designerPortrait"
                android:src="@drawable/shovon" android:contentDescription="@string/designer"
                android:layout_weight="0.1"
                android:layout_toRightOf="@id/developerPortrait"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/designer"
                android:id="@+id/designer"  android:textColor="#000000"
                android:layout_below="@id/designerPortrait"
                android:layout_toRightOf="@id/developerPortrait"
                />
    </RelativeLayout>

</ScrollView>